########################################
# Tenantra default environment template
########################################

# ----- Core backend settings -----
TENANTRA_ENV=development
APP_VERSION=1.0.0
DATABASE_URL=postgresql://tenantra:tenantra@127.0.0.1:5432/tenantra
DB_URL=postgresql://tenantra:tenantra@127.0.0.1:5432/tenantra
SQLALCHEMY_DATABASE_URI=postgresql://tenantra:tenantra@127.0.0.1:5432/tenantra
TENANTRA_ENC_KEY=replace-with-64-byte-hex-string
JWT_SECRET=replace-with-long-random-secret
TENANTRA_TEST_BOOTSTRAP=1
TENANTRA_AUTO_IMPORT_MODULES=1
TENANTRA_ENABLE_NOTIFICATIONS_WORKER=0
TENANTRA_ENABLE_MODULE_SCHEDULER=0
TENANTRA_SCHEDULER_INTERVAL=30
TENANTRA_EXPORT_RATE_WINDOW_SECONDS=60
TENANTRA_EXPORT_RATE_MAX=10

# ----- Admin / seed credentials -----
TENANTRA_ADMIN_PASSWORD=ChangeMeNow!
TENANTRA_TEST_ADMIN_PASSWORD=Admin@1234
DEFAULT_ADMIN_PASSWORD=ChangeMeNow!
SEED_TENANT_NAME=Default Tenant
SEED_TENANT_SLUG=default
SEED_ADMIN_USERNAME=admin
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=ChangeMeNow!

# ----- Frontend (Vite) -----
VITE_API_URL=http://127.0.0.1:5000/api
VITE_DASHBOARD_REFRESH_INTERVAL=30000
VITE_REMOTE_MODULE_CATALOG_URL=http://127.0.0.1:4173/catalog-remote
VITE_REMOTE_MODULE_CATALOG_SCOPE=tenantra/catalog
VITE_REMOTE_MODULE_CATALOG_MODULE=ModuleCatalog

# ----- Email / notifications -----
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=change-me
SMTP_FROM=tenantra@example.com
SMTP_TLS=1

# ----- Observability + tooling -----
TENANTRA_API=http://127.0.0.1:5000
TENANTRA_NGINX=http://127.0.0.1:80
TENANTRA_GRAFANA=http://127.0.0.1:3000
TENANTRA_VALIDATE_GRAFANA=0

# ----- Local testing helpers -----
TENANTRA_TEST_DB_URL=sqlite:///./test_api.db
ADMIN_USER=admin
ADMIN_PASS=Admin@1234
PLAYWRIGHT_BASE_URL=http://127.0.0.1:4173
